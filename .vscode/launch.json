    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--compilers",
                "js:ts-node/register,ts:ts-node/register,tsx:ts-node/register",
                "--timeout",
                "999999",
                "--colors"
            ],
            "env": {
                "NODE_ENV":"test"
            },
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "DebugApp",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}/app_test",
            "runtimeArgs": [
                "-r", "ts-node/register", 
                "${workspaceRoot}/app_test/app.ts", "--no-cache"
            ],
            "sourceMaps": true,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }

    ]
}